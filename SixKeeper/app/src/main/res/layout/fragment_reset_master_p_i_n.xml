<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context=".ResetMasterPINFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gResetMasterPINVertical09"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".09" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gResetMasterPINVertical91"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.91" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acbResetMasterPIN"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@drawable/layout_button_green_border"
            android:stateListAnimator="@null"
            android:text="@string/user_change_master_pin"
            android:textAllCaps="false"
            app:layout_constraintEnd_toStartOf="@+id/gResetMasterPINVertical91"
            app:layout_constraintStart_toStartOf="@+id/gResetMasterPINVertical09"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResetMasterPINMes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/gResetMasterPINVertical91"
            app:layout_constraintStart_toStartOf="@+id/gResetMasterPINVertical09"
            app:layout_constraintTop_toBottomOf="@+id/acbResetMasterPIN" />

        <View
            android:id="@+id/vResetMasterPINDivision1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="27dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/tvResetMasterPINMes" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acbResetPasswordReset"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout_button_green_quadrilateral"
            android:stateListAnimator="@null"
            android:text="@string/security_question_reset"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/gResetMasterPINVertical91"
            app:layout_constraintStart_toStartOf="@+id/gResetMasterPINVertical09"
            app:layout_constraintTop_toBottomOf="@+id/vResetMasterPINDivision1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>