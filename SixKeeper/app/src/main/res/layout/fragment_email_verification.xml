<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context=".EmailVerificationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gEmailVerificationVertical09"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".09" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gEmailVerificationVertical91"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.91" />

            <TextView
                android:id="@+id/tvEmailVerificationEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/many_email"
                app:layout_constraintEnd_toStartOf="@+id/gEmailVerificationVertical91"
                app:layout_constraintStart_toStartOf="@+id/gEmailVerificationVertical09"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etEmailVerificationEmail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/layout_edit_text"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textEmailAddress"
                android:maxLength="60"
                android:paddingStart="48dp"
                app:layout_constraintEnd_toStartOf="@+id/gEmailVerificationVertical91"
                app:layout_constraintStart_toStartOf="@+id/gEmailVerificationVertical09"
                app:layout_constraintTop_toBottomOf="@+id/tvEmailVerificationEmail"
                tools:ignore="Autofill, LabelFor, RtlSymmetry, TextFields" />

            <ImageView
                android:id="@+id/ivEmailVerificationEmail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="12dp"
                android:src="@drawable/ic_email_gray"
                app:layout_constraintBottom_toBottomOf="@+id/etEmailVerificationEmail"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="@+id/gEmailVerificationVertical09"
                app:layout_constraintTop_toTopOf="@+id/etEmailVerificationEmail"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbEmailVerificationVerify"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/layout_button_green_quadrilateral"
                android:stateListAnimator="@null"
                android:text="@string/email_verification_verify_email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/gEmailVerificationVertical91"
                app:layout_constraintStart_toStartOf="@+id/gEmailVerificationVertical09"
                app:layout_constraintTop_toBottomOf="@+id/ivEmailVerificationEmail" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>