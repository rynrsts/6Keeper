<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    tools:context=".MobileNumberValidationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gMobileNumberVertical09"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".09" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gMobileNumberVertical91"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.91" />

            <TextView
                android:id="@+id/tvMobileNumberGetOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/many_mobile_number"
                app:layout_constraintEnd_toStartOf="@+id/gMobileNumberVertical91"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etMobileNumberGetOTP"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/layout_edit_text"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="84dp"
                app:layout_constraintEnd_toStartOf="@+id/gMobileNumberVertical91"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toBottomOf="@+id/tvMobileNumberGetOTP"
                tools:ignore="Autofill, LabelFor, RtlSymmetry, TextFields" />

            <ImageView
                android:id="@+id/ivMobileNumberGetOTP"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="12dp"
                android:src="@drawable/ic_phone_gray"
                app:layout_constraintBottom_toBottomOf="@+id/etMobileNumberGetOTP"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toTopOf="@+id/etMobileNumberGetOTP"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvMobileNumberGetOTPPrefix"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/many_mobile_number_prefix"
                android:textColor="@color/lightBlack"
                app:layout_constraintBottom_toBottomOf="@+id/etMobileNumberGetOTP"
                app:layout_constraintStart_toEndOf="@+id/ivMobileNumberGetOTP"
                app:layout_constraintTop_toTopOf="@+id/etMobileNumberGetOTP" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbMobileNumberGetOTP"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/layout_button_green_border"
                android:stateListAnimator="@null"
                android:text="@string/mobile_number_get_otp"
                android:textAllCaps="false"
                app:layout_constraintEnd_toStartOf="@+id/gMobileNumberVertical91"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toBottomOf="@+id/etMobileNumberGetOTP" />

            <View
                android:id="@+id/vMobileNumberDivision"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/acbMobileNumberGetOTP" />

            <TextView
                android:id="@+id/tvMobileNumberEnterOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/mobile_number_enter_otp"
                app:layout_constraintEnd_toStartOf="@+id/gMobileNumberVertical91"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toBottomOf="@+id/vMobileNumberDivision" />

            <EditText
                android:id="@+id/etMobileNumberEnterOTP"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/layout_edit_text"
                android:inputType="number"
                android:maxLength="6"
                android:textAlignment="center"
                app:layout_constraintEnd_toStartOf="@+id/gMobileNumberVertical91"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toBottomOf="@+id/tvMobileNumberEnterOTP"
                tools:ignore="Autofill, LabelFor, RtlSymmetry, TextFields" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/acbMobileNumberEnterOTP"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/layout_button_green_quadrilateral"
                android:stateListAnimator="@null"
                android:text="@string/mobile_number_verify_otp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/gMobileNumberVertical91"
                app:layout_constraintStart_toStartOf="@+id/gMobileNumberVertical09"
                app:layout_constraintTop_toBottomOf="@+id/etMobileNumberEnterOTP" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>