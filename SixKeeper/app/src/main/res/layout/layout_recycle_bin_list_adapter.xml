<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="15dp"
    android:paddingEnd="21dp"
    android:paddingBottom="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbRecycleBinCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@drawable/style_checked_blue"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRecycleBinName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="21dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/ivRecycleBinIcon"
            app:layout_constraintStart_toEndOf="@+id/cbRecycleBinCheckBox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRecycleBinDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="21dp"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/ivRecycleBinIcon"
            app:layout_constraintStart_toEndOf="@+id/cbRecycleBinCheckBox"
            app:layout_constraintTop_toBottomOf="@+id/tvRecycleBinName" />

        <ImageView
            android:id="@+id/ivRecycleBinIcon"
            android:layout_width="30dp"
            android:layout_height="48dp"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>